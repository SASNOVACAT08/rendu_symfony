{% extends 'base.html.twig' %}

{% block title %}{{'catch'|trans}}{% endblock %}

{% block body %}
    <h1 style="text-align:center;">{{'cours'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{'title'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for cour in cours %}
            <tr>
                <td><a href="{{ path('cours_show', {'slug': cour.slug}) }}">{{ cour.title }}</a></td>
                <td>
                    {% if is_granted("ROLE_ADMIN") %}
                        <a href="{{ path('cours_edit', {'slug': cour.slug}) }}">{{'edit'|trans}}</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{'no-cours'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('cours_new') }}">{{'create'|trans}}</a>
    {% endif %}
{% endblock %}
